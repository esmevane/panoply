= devise_error_messages!
.form-card
  %h2 Edit your profile
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    %fieldset
      .form-name= f.text_field :name, placeholder: 'What is your name?'
      .form-email= f.email_field :email, placeholder: 'What is your email address?'
    %fieldset
      %h3 Change your password
      %small (leave blank if you don't want to change it)
      .form-password= f.password_field :password, placeholder: 'Change your password'
      .form-password= f.password_field :password_confirmation, placeholder: 'Confirm new password'
      .form-password= f.password_field :current_password, placeholder: 'Confirm old password'
    .form-button= f.submit "Change"
  .form-button-warning= button_to "Destroy account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete
